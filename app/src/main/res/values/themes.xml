<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidastariuminterviewapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fountain_blue</item>
        <item name="colorSecondaryVariant">@color/fountain_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView" >
        <item name="android:colorControlActivated">@color/fountain_blue</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>
</resources>